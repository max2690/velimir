@tailwind base;
@tailwind components;
@tailwind utilities;

:root {
  --font-inter: 'Inter', sans-serif;
  --font-manrope: 'Manrope', sans-serif;
}

body {
  @apply bg-background text-foreground antialiased;
  font-feature-settings: "ss01", "ss02", "cv01", "cv02";
}

@layer base {
  html {
    scroll-behavior: smooth;
  }
}

/* Matte textures & Museum spacing */
.matte-surface {
  @apply bg-background border border-separator transition-colors duration-300;
}

.museum-padding {
  @apply py-24 md:py-32 lg:py-48;
}

.section-container {
  @apply max-w-7xl mx-auto px-6 md:px-12 lg:px-24;
}

/* Typography */
h1, h2, h3, h4 {
  @apply font-display font-medium tracking-tight;
}

/* Transitions */
.fade-in {
  @apply opacity-0 translate-y-4;
}

/* Custom scrollbar for gallery mood */
::-webkit-scrollbar {
  width: 6px;
}

::-webkit-scrollbar-track {
  @apply bg-background;
}

::-webkit-scrollbar-thumb {
  @apply bg-separator rounded-full;
}

/* V Letter Shadow Overlay */
.grain-overlay {
  position: fixed;
  inset: 0;
  pointer-events: none;
  z-index: 9999;
  opacity: 0.02;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.grain-overlay::before {
  content: "V";
  font-family: var(--font-manrope), system-ui, sans-serif;
  font-size: 60vw;
  font-weight: 300;
  color: #EAE7E0;
  letter-spacing: -0.05em;
  animation: vShadowFloat 20s ease-in-out infinite;
  opacity: 0.15;
}

@keyframes vShadowFloat {
  0%, 100% { 
    transform: translate(0, 0) scale(1);
    opacity: 0.1;
  }
  25% { 
    transform: translate(3%, -2%) scale(1.02);
    opacity: 0.12;
  }
  50% { 
    transform: translate(-2%, 3%) scale(0.98);
    opacity: 0.15;
  }
  75% { 
    transform: translate(-3%, -1%) scale(1.01);
    opacity: 0.13;
  }
}

@media (prefers-reduced-motion: reduce) {
  .grain-overlay::before {
    animation: none;
    opacity: 0.08;
  }
}

